
<% layout('layouts/boilerplate') %>

    <div id="map" class="rounded mb-3" style="width: 100%; height: 500px" data-aos="fade-down" data-aos-duration="1000"></div>
    <h1>Welcome to Campgrounds Page!</h1>
    <div class="my-2"><a href="/campgrounds/new" class="btn btn-secondary">Create Campground</a></div>
    <ul class=" mt-2 p-0">
        <% campgrounds.forEach(campground => { %>
            <div class="card mb-3" data-aos="fade-up" data-aos-duration="1000">
                <div class="row">
                    <div class="col-md-4">
                        <img src="<%= campground.images[0].url %>" alt="campground" class="img-fluid">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= campground.title %> </h5>
                            <p class="card-text"><%= campground.description %> </p>
                            <small class="text-muted"><%= campground.location %> </small>
                            <div>
                                <a class="btn btn-primary mt-2" href="/campgrounds/<%= campground._id %> ">View Campground</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %> 
    </ul>

    <script>
        const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
        const campgrounds = {features:<%- JSON.stringify(campgrounds) %>};
    </script>

    <script src="/js/clustermap.js"></script>



